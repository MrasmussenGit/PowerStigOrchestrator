<Window x:Class="PowerStigOrchestrator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PowerStig Orchestrator - Launcher"
        Height="260" Width="360"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#E6F3FF"
        Loaded="Window_Loaded">
    <Window.Resources>
        <!-- Keeps Exit button red even if it becomes disabled -->
        <Style x:Key="ExitRedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#8B0000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#660000"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#8B0000"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Opacity" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="280">
            <TextBlock Text="Select an application to launch"
                       HorizontalAlignment="Center" Margin="0,0,0,12"
                       Foreground="#333" FontSize="14"/>
            <Button x:Name="PowerStigConverterUIButton"
                    Content="PowerStig Converter UI"
                    Height="36" Margin="0,0,0,8"
                    Click="PowerStigConverterUIButton_Click"/>
            <Button x:Name="MOFInspectorButton"
                    Content="MOF Inspector"
                    Height="36" Margin="0,0,0,8"
                    Click="MOFInspectorButton_Click"/>

            <Button x:Name="ExitButton"
                    Content="Exit"
                    Height="32"
                    Style="{StaticResource ExitRedButtonStyle}"
                    Margin="0,8,0,0"
                    Click="ExitButton_Click"/>

            <!-- Launching indicator (hidden until launching) - below Exit -->
            <StackPanel x:Name="BusyPanel" Visibility="Collapsed" Margin="0,8,0,0">
                <ProgressBar x:Name="BusyProgressBar" IsIndeterminate="True" Height="12"/>
                <TextBlock x:Name="BusyStatusText"
                           Text="Launching…"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"
                           Foreground="#333" FontSize="12"/>
            </StackPanel>

            <TextBlock x:Name="VersionTextBlock"
                       Text="Version: ..."
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"
                       Foreground="#555" FontSize="12"/>
        </StackPanel>
    </Grid>
</Window>